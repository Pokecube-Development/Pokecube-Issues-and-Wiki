{
  "rules":[
    {
      "preset":"sunny",
      "matchers":{
        "weather":{
          "type":"sun"
        }
      }
    },
    {
      "preset":"cloudy",
      "matchers":{
        "weather":{
          "type":"cloud"
        }
      }
    },
    {
      "preset":"raining",
      "matchers":{
        "weather":{
          "type":"rain"
        }
      }
    },
    {
      "preset":"raining_inside",
      "matchers":{
        "weather":{
          "type":"rain",
          "inside": true
        }
      }
    },
    {
      "preset":"snowing",
      "matchers":{
        "weather":{
          "type":"snow"
        }
      }
    },
    {
      "preset":"thundering",
      "matchers":{
        "weather":{
          "type":"thunder"
        }
      }
    }
  ]
}